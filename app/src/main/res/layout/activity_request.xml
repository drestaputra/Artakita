<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_abu_v">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingBottom="80dp">


                <Button
                    android:id="@+id/IvBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_left_black"
                    android:elevation="0dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Request Koperasi"
                    android:textColor="#2F2F30"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:textColorHint="@color/colorPrimaryDark">

                        <EditText
                            android:id="@+id/EtNoHp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_gradient_white"
                            android:fontFamily="@font/lato"
                            android:hint="Nomor HP"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            android:textColor="#585858"
                            android:textColorHighlight="@color/colorPrimaryDark"
                            android:textColorHint="#247F8D"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:textColorHint="@color/colorPrimary"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/EtConfPassword"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_gradient_white"
                            android:fontFamily="@font/asap_bold"
                            android:hint="Ulangi password"
                            android:inputType="textPassword"
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            android:textColor="#585858"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="#247F8D"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"

                        android:textColorHint="@color/colorPrimaryDark">

                        <EditText
                            android:id="@+id/EtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_gradient_white"
                            android:fontFamily="@font/lato"
                            android:hint="Username"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            android:textColor="#585858"
                            android:textColorHighlight="@color/colorPrimaryDark"
                            android:textColorHint="#247F8D"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:textColorHint="@color/colorPrimary"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/EtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_gradient_white"
                            android:fontFamily="@font/asap_bold"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            android:textColor="#585858"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="#247F8D"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"

                        android:textColorHint="@color/colorPrimaryDark">

                        <EditText
                            android:id="@+id/EtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_gradient_white"
                            android:fontFamily="@font/lato"
                            android:hint="Email"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            android:textColor="#585858"
                            android:textColorHighlight="@color/colorPrimaryDark"
                            android:textColorHint="#247F8D"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/BtnRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_gradient_success_nc"
                android:fontFamily="@font/asap_bold"
                android:padding="10dp"
                android:shadowColor="@android:color/transparent"
                android:text="Request"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>