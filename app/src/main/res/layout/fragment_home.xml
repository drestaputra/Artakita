<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/ClHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_abu_v"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="50dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/CvHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="6dp"
                    android:padding="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:id="@+id/ClAkun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView24"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="10dp"
                            android:background="#B715B2CD"
                            app:srcCompat="?attr/dividerVertical" />

                        <LinearLayout
                            android:id="@+id/LlPeringkat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardBackgroundColor="@color/gray_200"
                                app:cardCornerRadius="35dp">

                                <ImageView
                                    android:id="@+id/imageView26"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_user"
                                    android:backgroundTint="#FFFFFF"
                                    android:padding="3dp"
                                    android:scaleType="centerCrop" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TxvUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:text="Hai Juragan"
                                android:textColor="@color/gray_900" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/acme"
                                android:text="Jemput rejeki yuk"
                                android:textColor="@color/gray_700"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <Button
                                android:id="@+id/BtnLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/bg_gradient_warning"
                                android:fontFamily="@font/acme"
                                android:text="Login"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/BtnDaftar"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:background="@drawable/bg_gradient_success"
                                android:fontFamily="@font/acme"
                                android:text="Daftar"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="11sp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CvHeader2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="6dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="3dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="10dp"
                                android:background="#B715B2CD"
                                app:srcCompat="?attr/dividerVertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Pembayaran"
                                    android:textColor="@color/gray_900"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/Semua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/acme"
                                    android:gravity="end"
                                    android:text="Lihat semua"
                                    android:textColor="@color/colorPrimary"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/viewPagerPaket"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:clipToPadding="false"
                                android:foregroundGravity="center"
                                android:isScrollContainer="false"
                                android:minHeight="200dp"
                                android:overScrollMode="never" />
                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmer_card_view_paket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:duration="600">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:layout_marginRight="20dp"
                                    app:cardBackgroundColor="@color/gray_400"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="4dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </com.facebook.shimmer.ShimmerFrameLayout>
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CvBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:clipToPadding="false"
                        android:foregroundGravity="center"
                        android:minHeight="200dp"
                        android:overScrollMode="never"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_card_view_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:duration="600">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginEnd="20dp"
                            app:cardBackgroundColor="@color/gray_400"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-12dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewPager">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="6dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlJadwal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_calendar_black" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Jadwal"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/CvNasabah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="6dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlNasabah"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_users" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Nasabah"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="6dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlTransaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_time_black" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Transaksi"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlAngsur"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_angsuran" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Mengangsur"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlOperBerkas"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_folder" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Oper Berkas"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlInformasiProgram"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_news" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Artikel"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LlLihatSetoran"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_report" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Lihat Setoran"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlPengaduan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_chat" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Pengaduan"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:id="@+id/LlSimulasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:tint="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_mobile" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/acme"
                                        android:gravity="center"
                                        android:text="Simulasi"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CvBody2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="6dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>